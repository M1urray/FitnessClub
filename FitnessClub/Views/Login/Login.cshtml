
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LoginMaster.cshtml";
}
<style>
    .textl-center {
        text-align: right !important;
    }

    .text-muted {
        color: #051936 !important
    }

    .lblClass {
        color: black;
    }

    .textAnimation {
        animation: alternate;
    }

    .card-body {
        background-image: linear-gradient(to bottom,#A3DDF0,#47BAE1);
    }
</style>
<div class="p-2">
    <div class="form-group">
        <label for="username" class="lblClass">Username</label>
        <input type="text" class="form-control" id="username" placeholder="Enter username" required>
    </div>

    <div class="form-group">
        <label for="userpassword" class="lblClass">Password</label>
        <input type="password" class="form-control" id="userpassword" placeholder="Enter password">
    </div>

    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customControlInline">
        <label class="custom-control-label" for="customControlInline">Remember me</label>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary btn-block waves-effect waves-light" id="btnLogin" type="submit">Log In</button>
    </div>
    <div class="mt-4 textl-center">
        <a href="/Login/ForgotPassword" class="text-muted"><i class="mdi mdi-lock-open mr-1"></i> Forgot your password?</a>
    </div>
</div>
<script src="~/assets/js/ShowProgression.js"></script>
<script src="~/SiteJS/LoginJS.js"></script>


