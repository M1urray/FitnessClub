
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/LoginMaster.cshtml";
}
<style>
    .textl-center {
        text-align: right !important;
    }

    .text-muted {
        color: #051936 !important
    }

    .lblClass {
        color: black;
    }

    .textAnimation {
        animation: alternate;
    }

    .card-body {
        background-image: linear-gradient(to bottom,#A3DDF0,#47BAE1);
    }
</style>
<div class="p-2">
    <div class="form-group">
        <label for="username" class="lblClass">Username</label>
        <input type="text" class="form-control" id="username" placeholder="Enter username" required>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary btn-block waves-effect waves-light" id="btnReset" type="submit">Reset Password</button>
    </div>
    <div class="mt-4 textl-center">
        <a href="/Login/Login" class="text-muted"><i class="mdi mdi-login mr-1"></i> Login</a>
    </div>
</div>
<script src="~/assets/js/ShowProgression.js"></script>
<script src="~/SiteJS/ForgetPasswordJS.js"></script>



