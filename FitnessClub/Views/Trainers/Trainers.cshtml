@model IEnumerable<FitnessClub.Models.Trainer>

@{
    ViewBag.Title = "Trainers";
    Layout = "~/Views/Shared/Sitemaster.cshtml";
}
<div>
    <button class="btn btn-primary" data-toggle="modal" data-target="#myModal"> Add Trainer</button>
</div>
<hr/>
<table class="table">
<thead style="background-color:black;color:white">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shift)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShiftTime)
        </th>
        <th></th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shift)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShiftTime)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
        </tr>
        
        
    }
    </tbody>


</table>
@*//////////////////////Modal Links////////////////////////////*@
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content bg-white">
            <div class="modal-header">
                <h4 class="modal-title">Add Trainer</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            Name
                            <div class="col-md-12">
                                <input class="form-control" type="text" placeholder="name"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            Shift
                            <div class="col-md-12">
                                <input class="form-control" type="text" placeholder="email"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect " data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>